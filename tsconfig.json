{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext", // ou "es6"
    "target": "es6",
    "moduleResolution": "node", // Usar resolução de módulos do Node.js
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
